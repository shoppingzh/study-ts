{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "lib": ["ES2015", "ES2021", "DOM"],
    "listFiles": false,
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

